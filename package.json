{
  "name": "rollipop-monorepo",
  "private": true,
  "workspaces": [
    "example",
    "packages/*"
  ],
  "scripts": {
    "typecheck:all": "yarn workspaces foreach --all --topological-dev run typecheck",
    "lint": "oxlint --type-aware --deny-warnings",
    "lint:fix": "oxlint --type-aware --deny-warnings --fix",
    "format": "oxfmt",
    "build:all": "yarn workspaces foreach --all --topological-dev run build"
  },
  "devDependencies": {
    "@types/node": "^22",
    "oxfmt": "^0.17.0",
    "oxlint": "^1.32.0",
    "oxlint-tsgolint": "^0.8.5",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "hermes-compiler": "250829098.0.4"
  },
  "packageManager": "yarn@4.12.0",
  "dependencies": {
    "@swc/core": "^1.15.5"
  }
}
